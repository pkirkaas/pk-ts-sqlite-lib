/**
 * Just for TS-Node...
 */
{
  "extends": "pk-ts-node-lib/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/esm",
    "esModuleInterop": true,
    "baseUrl": "./",
  },
  "include": [
    "./src/**/*",
    "./src/*",
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "experimentalResolver": true,
  },
  "typeRoots": [
    "node_modules/@types",
    "src/custom_types/"
  ]
}