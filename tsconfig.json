/**
 * Just for TS-Node...
 */
{
  "extends": "pk-ts-node-lib/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/esm",
    "esModuleInterop": true,
    "baseUrl": "./",
  },
  "include": [
    "./src/**/*",
    "./src/*",
  ],
  "exclude": [
    "./src/prisma",
    "./src/prisma/**",
    "./src/prisma/*",
    "src/prisma/**",
    "src/prisma/*",
    "src/prisma",
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/custom_types/"
  ]
}