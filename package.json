{
  "name": "pk-ts-sqlite-lib",
  "version": "l.0.1",
  "author": "Paul Kirkaas",
  "license": "UNLICENSED",
  "description": "TS/JS Utilities for SQLite apps, including common & Node JS functions",
  "type":"module",
  "module":"./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "default": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./tsconfig.common.json": "./tsconfig.common.json"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.esm.json && tsc -p ./tsconfig.cjs.json",
    "clean": "rm -rf ./dist ./node_modules package-lock.json"
  },
  "dependencies": {
    "pk-ts-node-lib": "git+https://github.com/pkirkaas/pk-ts-node-lib.git#working",
    "sqlite":"*",
    "sqlite3":"*",
    "@types/sqlite3": "*"
  }
}
