{
  "name": "pk-ts-sqlite-lib",
  "author": "Paul Kirkaas",
  "license": "UNLICENSED",
  "description": "TS/JS Utilities for SQLite apps, including common & Node JS functions",
  "type": "module",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "default": "./dist/esm/index.js",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./pkfaker": {
      "types": "./dist/esm/pkfaker/index.d.ts",
      "default": "./dist/esm/pkfaker/index.js",
      "import": "./dist/esm/pkfaker/index.js",
      "require": "./dist/cjs/pkfaker/index.js"
    },
    "./typeorm": {
      "types": "./dist/esm/typeorm/index.d.ts",
      "default": "./dist/esm/typeorm/index.js",
      "import": "./dist/esm/typeorm/index.js",
      "require": "./dist/cjs/typeorm/index.js"
    },
    "./tsconfig.cjs.json": "./tsconfig.cjs.json",
    "./tsconfig.json": "./tsconfig.json",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json && tsc -p ./tsconfig.cjs.json",
    "monitor": "nodemon --exec \"npm run build\" --ext js,jsx,ts,tsx,sass,css --delay 5 --watch ./src",
    "pushdb": "npx prisma db push",
    "linkdev": "npm link pk-ts-node-lib pk-ts-common-lib",
    "seeddb": "npx prisma db seed",
    "generate": "npx prisma generate",
    "studio": "npx prisma studio",
    "clean": "rm -rf ./dist ./node_modules package-lock.json && npm i"
  },
  "prisma": {
    "seed": "node --loader  ts-node/esm ./prisma/seed.ts"
  },
  "dependencies": {
    "@faker-js/faker": "*",
    "@prisma/client": "*",
    "@types/geojson": "^7946.0.14",
    "@types/sqlite3": "*",
    "class-validator": "^0.14.1",
    "date-fns": "*",
    "lodash": "*",
    "mysql2": "*",
    "pg": "^8.11.3",
    "pk-ts-common-lib": "github:pkirkaas/pk-ts-common-lib#working",
    "pk-ts-node-lib": "github:pkirkaas/pk-ts-node-lib#working",
    "prisma": "*",
    "sqlite": "*",
    "sqlite3": "*",
    "ts-node": "*",
    "tsconfig-paths": "*",
    "typeorm": "*"
  },
  "alt-lib-gits": [
    {
      "pk-ts-common-lib": "git+https://github.com/pkirkaas/pk-ts-common-lib.git#working",
      "pk-ts-node-lib": "git+https://github.com/pkirkaas/pk-ts-node-lib.git#working",
      "no": "nothing"
    },
    {
      "pk-ts-common-lib": "github:pkirkaas/pk-ts-common-lib#working",
      "pk-ts-node-lib": "github:pkirkaas/pk-ts-node-lib#working",
      "no": "nothing"
    },
    {
      "no": "nothing"
    },
    {
      "no": "nothing"
    },
    {
      "no": "nothing"
    }
  ]
}
